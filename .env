# Telegram Bot Token (Required)
BOT_TOKEN=your_telegram_bot_token_here

# Admin Telegram IDs (Required)
# Add the Telegram IDs of admins, separated by commas
ADMIN_TELEGRAM_IDS=123456789,987654321

# Wallet Address (Required for payments)
# This is the wallet address where payments will be sent
WALLET_ADDRESS=your_wallet_address_here

# Payment Provider Token (Required for Telegram payments)
# This is the token provided by your payment provider (e.g., Stripe, etc.)
PROVIDER_TOKEN=your_payment_provider_token_here

# Server Port (Optional, defaults to 3000)
PORT=3000

# Glitch/Server Ping URL (Optional, for keeping the server alive)
PING_URL=https://tg-star-store.glitch.me
